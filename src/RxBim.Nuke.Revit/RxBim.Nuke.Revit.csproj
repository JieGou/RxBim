<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net5.0</TargetFramework>
        <PlatformTarget>x64</PlatformTarget>
        <NoWarn>NU1701;NU1702;CS1591</NoWarn>
        <AssemblyName>$(MSBuildProjectName).$(ApiVersion)</AssemblyName>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\RxBim.Nuke\RxBim.Nuke.csproj" />
    </ItemGroup>

    <ItemGroup Condition=" '$(Configuration)' == 'Debug' ">
        <NukeSpecificationFiles Include="RevitTestFramework.json" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Nuke.Common" Version="5.2.1" />
        <PackageReference Include="RazorLight" Version="2.0.0-rc.4" />
        <PackageReference Include="RevitTestFramework" Version="1.19.22">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Include="TestHelpers\Result.cshtml">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </EmbeddedResource>
    </ItemGroup>

    <PropertyGroup>
        <Version>$(ApiVersion)</Version>
        <Description>RxBim nuke plugin for automation of building for Revit</Description>
        <PackageId>RxBim.Nuke.Revit</PackageId>
    </PropertyGroup>

</Project>
